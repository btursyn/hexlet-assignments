<h1><%= @task.name %></h1>
<p><%= @task.status %></p>
<p><%= @task.creator %></p>
<p><%= @task.completed %></p>
<p><%= @task.description %></p>
<p><%= @task.performer %></p>
<small>Author: <%= @task.creator %> <i><%= @task.created_at.in_time_zone('Moscow').strftime("%H:%m %d.%m.%y") %></i></small>
<hr>
<%= link_to 'Back', task_path %>
<%= link_to 'Delete', task_path(@task), data: { "turbo-method": :delete, "turbo-confirm": 'Are you sure?' } %>
<%= link_to 'Edit', edit_task_path(@task) %>
